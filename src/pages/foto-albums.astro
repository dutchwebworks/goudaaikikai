---
import Layout from "@/layouts/Layout.astro";
import { nlDate } from "@/helpers/nl-date.js";
import { slugify } from "@/helpers/slugify.js";

const photoAlbumsData = await getCollection("photoAlbums");
---

<Layout title="Foto albums">
    <h2>Foto album(s)</h2>

    <p class="inleiding">Op deze pagina vind u diverse foto albums over aikido/aikikai stages, examens, trainingen en de jaarlijkse barbecues.</p>

    <ul>
        {
            photoAlbumsData.map(({ data: { header, date } }) => (
                <li>
                    <a href={`/foto-album/${slugify(header)}`}>{header}</a> ({nlDate(date)})
                </li>
            ))
        }
    </ul>
</Layout>

